<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_bg_bluegray_900_radius_15"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/orderhistoryitem_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:paddingLeft="20dp"
            android:text="20 Sept, 2020"
            android:textAlignment="textEnd"
            android:textColor="@color/white_A700" />

        <TextView
            android:id="@+id/orderhistoryitem_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="Hotel ABC"
            android:textColor="@color/white_A700"
            android:textSize="@dimen/_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderhistoryitem_roomname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:text="Luxury Suite"
            android:textColor="@color/white_A700" />

        <TextView
            android:id="@+id/orderhistoryitem_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:paddingBottom="10dp"
            android:text="$40"
            android:textColor="@color/white_A700" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>